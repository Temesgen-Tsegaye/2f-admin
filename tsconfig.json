{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions":true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.tsserver.ts.js",
    "src/config/prisma-client.ts",
    "src/lib/channel/channelReal.ts",
    "src/utils/caslPrisma.ts",
    ".next/types/**/*.ts"
, "src/auth/index.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
